#!/usr/bin/env bash

sudo add-apt-repository -y ppa:yubico/stable
sudo apt-get update

sudo DEBIAN_FRONTEND=noninteractive \
  apt-get install -y \
  hwdata \
  linux-tools-generic \
  scdaemon \
  yubikey-manager

# Disable PC/SC-daemon â€“ we don't want it running (but most likely it got
# installed as a dependency of yubikey-manager)...
if systemctl status pcscd; then
  sudo systemctl mask pcscd
  sudo systemctl stop pcscd
fi

{
  printf 'ðŸ“¢ Manual installation of "/etc/udev/rules.d/70-yubikey.rules"'
  printf 'required; see ".gnupg/README.md" for more details...\n'
} >&3

if [[ -z $USBIP_HOST || -z $USBIP_BUSID ]]; then
  {
    printf "ðŸ“¢ To use \"yubikey-attach\", " >&3
    printf "ensure \$USBIP_HOST and \$USBIP_BUSID are set...\n"
  } >&3
fi
