#!/usr/bin/env bash

xauth add :0 . "$(mcookie)"

# Symlink ~/Desktop and ~/Downloads

if [ ! -e ~/Desktop ]; then
  if [ ! -d /mnt/d/Thijs/Desktop ]; then
    echo '  â›” Skipping "ðŸ”— ~/Desktop" â€” target not found...' >&3
    return 0
  fi
  ln -s /mnt/d/Thijs/Desktop ~/Desktop
  echo "  ðŸ”— ~/Desktop â† /mnt/d/Thijs/Desktop" >&3
fi

if [ ! -e ~/Downloads ]; then
  if [ ! -d /mnt/d/Thijs/Desktop ]; then
    echo '  â›” Skipping "ðŸ”— ~/Downloads" â€” target not found...' >&3
    return 0
  fi
  ln -s /mnt/d/Thijs/Downloads ~/Downloads
  echo "  ðŸ”— ~/Downloads â† /mnt/d/Thijs/Downloads" >&3
fi
