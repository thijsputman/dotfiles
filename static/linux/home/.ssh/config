ServerAliveInterval 120

IdentitiesOnly yes

Host github.com
  PubkeyAuthentication yes
  IdentityFile ~/.ssh/id_rsa_yubikey.pub

Host somewhere
  PubkeyAuthentication yes
  IdentityFile ~/.ssh/id_rsa_yubikey.pub
  HostName somewhere.example
  User your_name
  ForwardAgent yes
  RemoteForward /run/user/1000/gnupg/S.gpg-agent /home/your_name/.gnupg/S.gpg-agent.extra
  ForwardX11 yes

Host ...

# Don't send public keys to unknown hosts (requires "PubkeyAuthentication
# yes" for all known hosts - above - to work as intended)
Host *
  PubkeyAuthentication no
